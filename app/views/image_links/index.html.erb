

<div class="row">
<% @image_links.each do |image_link| %>
<div class="col-md-1 col-md-offset-3"><%= follow_link(image_link.user) %></div>
  <%= div_for image_link do %>
    
      <div class="col-md-1 col-md-offset-3">
        by user:
        <strong><%= "@" + image_link.user.name %>
        </strong>
      </div>
      <div class="text_post_upper col-md-offset-6"> 
        <h2><%= image_link.title %></h2>
      </div>
      
    </div>



  <%= image_tag image_link.url, :class => 'image-link-image thumbnail col-md-offset-6', :id => 'centerimg' %>
  
