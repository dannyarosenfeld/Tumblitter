      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.button "", :id => 'btn1', :class => 'fa fa-thumbs-up fa-2x' %>
    <p>
      <%= link_to "Show", image_link_path(image_link) %> | 
    </p> 

    </div>
  </div>

  <span class="text_post_lower col-md-offset-6">
