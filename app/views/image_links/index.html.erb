


<% @image_links.each do |image_link| %>
  <%= div_for image_link do %>
    <div class="row">
      <div class="col-md-1 col-md-offset-3"><%= follow_link(image_link.user) %>
      </div>
      <div class="col-md-1 user_side">
        <strong>by user:<%= "@" + image_link.user.name %>
        </strong>
        <%= image_tag image_link.user.avatar.url(:thumb) %>

      </div>
      <div class="text_post_upper col-md-3 col-md-offset-1"> 
        <h2><%= image_link.title %></h2>
      </div>
    </div>


  
  <div class="row">
      <%= image_tag image_link.url, :class => 'image-link-image thumbnail col-md-offset-6', :id => 'centerimg' %>
  </div>
<%# <% @image_links.each do |image_link| %>
